<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="700.0" style="-fx-background-color: #899D78;"
            xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ui.DashboardController">

    <children>
        <!-- White content area -->
        <AnchorPane layoutY="30.0" prefHeight="374.0" prefWidth="700.0" style="-fx-background-color: #FFFFFF;">
            <children>
                <TabPane prefHeight="374.0" prefWidth="700.0" tabClosingPolicy="UNAVAILABLE">
                    <tabs>
                        <Tab text="History" closable="false">
                            <content>
                                <fx:include fx:id="historyView" source="history.fxml"/>
                            </content>
                        </Tab>

                        <Tab text="Deposit/Withdraw" closable="false">
                            <content>
                                <fx:include fx:id="cashView" source="cash.fxml"/>
                            </content>
                        </Tab>

                        <Tab text="Transfer" closable="false">
                            <content>
                                <fx:include fx:id="transferView" source="transfer.fxml"/>
                            </content>
                        </Tab>
                    </tabs>
                </TabPane>
            </children>
        </AnchorPane>

        <!-- Top bar -->
        <Label layoutX="277.0" layoutY="-2.0" prefHeight="32.0" prefWidth="147.0" text="BANK APP">
            <font>
                <Font name="High Tower Text" size="27.0"/>
            </font>
        </Label>

        <Label layoutX="14.0" layoutY="5.0" text="User:">
            <font><Font size="13.0"/></font>
        </Label>

        <Label fx:id="userLabel" layoutX="49.0" layoutY="5.0" text="Client">
            <font><Font size="13.0"/></font>
        </Label>

        <Label layoutX="582.0" layoutY="5.0" text="Amount:">
            <font><Font size="13.0"/></font>
        </Label>

        <Label fx:id="amountLabel" layoutX="636.0" layoutY="5.0" text="0.0">
            <font><Font size="13.0"/></font>
        </Label>
    </children>
</AnchorPane>
